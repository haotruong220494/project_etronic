<div class="space-top-1">
  <dv class=" d-flex justify-content-between border-bottom border-color-1 flex-md-nowrap flex-wrap border-sm-bottom-0">
    <h3 class="section-title mb-0 pb-2 font-size-22">Sản Phẩm Bán Chạy</h3>
  </dv>
  <div class="pt-3 pb-6">
    <div class="js-slide">
      <ul class="row list-unstyled products-group no-gutters mb-0 overflow-visible">
        <% @product_selling.each do |product| %>
          <li class="col-wd-3 col-md-4 product-item product-item__card d-none d-wd-block pb-2 mb-2 pb-md-0 mb-md-0 border-bottom border-md-bottom-0 remove-divider-wd">
            <div class="product-item__outer h-100">
              <div class="product-item__inner p-md-3 row no-gutters">
                <div class="col col-lg-auto product-media-left">
                  <%= link_to product_path(product), class: "max-width-150 d-block" do %>
                    <%= image_tag(product.image, class: "img-fluid") %>
                  <% end %>
                </div>
                <div class="col product-item__body pl-2 pl-lg-3 mr-xl-2 mr-wd-1">
                  <div class="mb-4">
                    <div class="mb-2">
                      <%= link_to collection_path(product.collection), class: "font-size-12 text-gray-5" do %>
                        <%= product.collection.title %>
                      <% end %>
                    </div>
                    <h5 class="product-item__title" title="<%= product.name %>">
                      <%= link_to product_path(product), class: "text-blue font-weight-bold" do %>
                        <%= product.name %>
                      <% end %>
                    </h5>
                  </div>
                  <div class="flex-center-between mb-3">
                    <div class="prodcut-price">
                      <% if product.promotional_price.present? %>
                        <del class="font-size-12 tex-gray-6 bottom-100"><%= number_with_delimiter(product.price ) %> vnđ</del>
                        <div class="text-red font-size-16"><%= number_with_delimiter(product.promotional_price ) %> vnđ</div>
                      <% else %>
                        <div class="text-red font-size-16"><%= number_with_delimiter(product.price ) %> vnđ</div>
                      <% end %>
                    </div>
                    <div class="d-none d-xl-block prodcut-add-cart">
                      <a href="" class="btn-add-cart btn-primary transition-3d-hover"><i class="ec ec-add-to-cart"></i></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
