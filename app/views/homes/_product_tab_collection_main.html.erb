<div class="products-group-4-1-4 space-1 bg-gray-7">
  <h2 class="sr-only">Danh mục sản phẩm</h2>
  <div class="container">
    <!-- Nav Classic -->
    <div class="position-relative text-center z-index-2 mb-3">
      <ul class="nav nav-classic nav-tab nav-tab-sm px-md-3 justify-content-start justify-content-lg-center flex-nowrap flex-lg-wrap overflow-auto overflow-lg-visble border-md-down-bottom-0 pb-1 pb-lg-0 mb-n1 mb-lg-0" id="pills-tab-1" role="tablist">
    		<% @collections_main.each_with_index do |collection, index| %>
    			<li class="nav-item flex-shrink-0 flex-lg-shrink-1">
            <a class="nav-link <%= 'active' if index == 0 %>" id="collection-<%= index %>-tab" data-toggle="pill" href="#collection-<%= index %>" role="tab" aria-controls="collection-<%= index %>" aria-selected="true">
              <div class="d-md-flex justify-content-md-center align-items-md-center">
                <%= collection.title %>
              </div>
            </a>
          </li>
    		<% end %>
      </ul>
    </div>
    <!-- End Nav Classic -->

    <!-- Tab Content -->
    <div class="tab-content" id="Tpills-tabContent">
  		<% @collections_main.each_with_index do |collection, index| %>
    		<div class="tab-pane pt-2 <%= 'fade show active' if index == 0 %>" id="collection-<%= index %>" role="tabpanel" aria-labelledby="collection-<%= index %>-tab">
          <div class="row no-gutters">
            <div class="col-md-12 col-wd-12 d-md-flex d-wd-block">
              <ul class="row list-unstyled products-group no-gutters mb-0 flex-xl-column flex-wd-row">
              	<% if collection.products.present? %>
	              	<% collection.products.limit(12).each do |product| %>
	              		<% if product.status %>
			                <li class="col-xl-2 product-item max-width-xl-100 remove-divider">
			                  <div class="product-item__outer h-100 w-100 prodcut-box-shadow">
			                    <div class="product-item__inner bg-white p-3">
			                      <div class="product-item__body pb-xl-2">
			                        <div class="mb-2">
			                        	<a href="" class="font-size-12 text-gray-5"><%= product.collection.title %></a>
			                        </div>
			                        <h5 class="mb-1 product-item__title">
                                <%= link_to product_path(product), class: "text-blue font-weight-bold" do %>
                                  <%= product.name %>
                                <% end %>
			                        </h5>
			                        <div class="mb-2">
                                <%= link_to product_path(product), class: "d-block text-center" do %>
                                  <%= image_tag(product.image, class: "img-fluid", alt: "image #{product.name}") %>
			                          <% end %>
			                        </div>
			                        <div class="flex-center-between mb-1">
			                          <div class="prodcut-price position-relative">
			                          	<% if product.promotional_price.present? %>
			                          		<del class="font-size-12 position-absolute tex-gray-6 bottom-100"><%= number_with_delimiter(product.price ) %> vnđ</del>
			                          		<span class="font-size-16 text-red position-absolute tex-gray-6 bottom-100 right-0"><%= sale_off(product) %></span>
			                          		<div class="text-red"><%= number_with_delimiter(product.promotional_price ) %> vnđ</div>
			                          	<% else %>
			                          		<div class="text-red"><%= number_with_delimiter(product.price ) %> vnđ</div>
			                          	<% end %>
			                          </div>
			                          <div class="d-none d-xl-block prodcut-add-cart">
			                            <a href="" class="btn-add-cart btn-primary transition-3d-hover">
			                            	<i class="ec ec-add-to-cart"></i>
			                            </a>
			                          </div>
			                        </div>
			                      </div>
			                    </div>
			                  </div>
			                </li>
			              <% end -%>
	                <% end %>
	              <% else %>
	              	<i>Các dòng cản phẩm <b><%= collection.title %></b> đang tạm thời hết hàng. <a class="text-blue" href="#nhantin">đăng ký nhận tin </a>khi có sản phẩm mới cập nhật.</i>
	              <% end %>
              </ul>
            </div>
          </div>
        </div>
  		<% end %>
    </div>
    <!-- End Tab Content -->
  </div>
</div>
