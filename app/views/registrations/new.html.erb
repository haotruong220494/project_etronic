<% provide :title, t(".title_head") %>
<div class="custom-signIn">
  <%= render "shared/flash" %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="group-input group-input-new-password">
      <div class="form-group">
        <label class="control-label label-required" for="first_name">
          <%= t("activerecord.attributes.account.name") %>
        </label>
        <%= f.input :name, as: :string,
          input_html: { class: "form-control", value: f.object.name, id: "first_name",
          placeholder: t(".placeholder_first_name") }, label: false, autofocus: true  %>
      </div>
      <div class="form-group">
        <label class="control-label label-required" for="email">
          <%= t("activerecord.attributes.account.email") %>
        </label>
        <%= f.input :email, as: :string,
          input_html: { class: "form-control", value: f.object.email, id: "email",
          placeholder: t(".placeholder_email") }, label: false%>
      </div>

      <div class="form-group">
        <label class="control-label label-required" for="email">
          <%= t("activerecord.attributes.account.password") %>
        </label>
        <%= f.input :password, as: :string,
          input_html: { class: "form-control", value: f.object.password, id: "password",
          placeholder: t(".password") }, label: false, autocomplete: "new-password"%>
      </div>

      <div class="form-group">
        <label class="control-label label-required" for="email">
          <%= t("activerecord.attributes.account.password_confirmation") %>
        </label>
        <%= f.input :password_confirmation, as: :string,
          input_html: { class: "form-control", value: f.object.password_confirmation, id: "password_confirmation",
          placeholder: t(".password_confirmation") }, label: false, autocomplete: "new-password"%>
      </div>
    </div>
    <button class="submit-resetpassword" type="submit"><%= t(".button_submit") %></button>
    <div class="col-md-12 text-center">
      <p class="text-registration"><%= t(".text_before_login") %><%= link_to t(".button_login"), new_account_session_path %></p>
    </div>
  <% end %>
</div>
