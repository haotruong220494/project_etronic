<% provide :title, "Cập nhật tài khoản" %>
<div class="container">
      <div class="my-4">
          <div class="row">
              <div class="col-md-5 ml-xl-auto mr-md-auto mr-xl-0 mb-8 mb-md-0">
                  <!-- Title -->
                  <div class="border-bottom border-color-1 mb-6">
                      <h3 class="d-inline-block section-title mb-0 pb-2 font-size-26"><%= current_account.name %></h3>
                  </div>
                  <p class="text-gray-90 mb-4">Thông tin hiện tại.</p>
                  <p><i class="far fa-envelope"></i> <%= current_account.email %></p>
                  <p><i class="fas fa-map-marker-alt"></i> <%= current_account.address %></p>
                  <p><i class="fas fa-mobile-alt"></i> <%= current_account.phone_number %></p>
                  <p><i class="fas fa-birthday-cake"></i> <%= current_account.birth_day %></p>
              </div>
              <div class="col-md-1 d-none d-md-block">
                  <div class="flex-content-center h-100">
                      <div class="width-1 bg-1 h-100"></div>
                      <div class="width-50 height-50 border border-color-1 rounded-circle flex-content-center font-italic bg-white position-absolute"></div>
                  </div>
              </div>
              <div class="col-md-5 ml-md-auto ml-xl-0 mr-xl-auto">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "js-validate", method: :put }) do |f| %>
                  <header class="text-center mb-7">
                    <h2 class="h4 mb-0">Cập nhật thông tin cá nhân !</h2>
                    <p>Đế Bello hiểu bạn hơn</p>
                  </header>

                  <!-- Form Group -->
                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                          <label class="sr-only" for="regName">Email</label>
                          <div class="input-group">
                              <div class="input-group-prepend">
                                  <span class="input-group-text" id="signinEmailLabel">
                                      <span class="fas fa-user"></span>
                                  </span>
                              </div>
                              <%= f.text_field :name, class: "form-control",
                                placeholder: "Họ tên",
                                id: "regName",
                                required: true,
                                data: {
                                  msg: "Họ tên không được để trống. Vui lòng thử lại.",
                                  error_class: "u-has-error",
                                  success_class: "u-has-success"
                                }
                              %>
                          </div>
                      </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                          <label class="sr-only" for="signinEmail">Email</label>
                          <div class="input-group">
                              <div class="input-group-prepend">
                                  <span class="input-group-text" id="signinEmailLabel">
                                      <span class="far fa-envelope"></span>
                                  </span>
                              </div>
                              <%= f.text_field :email, autofocus: true, readonly: true, class: "form-control",
                                placeholder: "Địa chỉ email",
                                id: "signinEmail",
                                required: true,
                                data: {
                                  msg: "Vui lòng nhập một địa chỉ email hợp lệ.",
                                  error_class: "u-has-error",
                                  success_class: "u-has-success"
                                }
                              %>
                          </div>
                      </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                          <label class="sr-only" for="address">Địa chỉ</label>
                          <div class="input-group">
                              <div class="input-group-prepend">
                                  <span class="input-group-text" id="signinEmailLabel">
                                      <span class="fas fa-map-marker-alt"></span>
                                  </span>
                              </div>
                              <%= f.text_field :address, autofocus: true, class: "form-control",
                                placeholder: "Địa chỉ",
                                id: "address",
                                required: true,
                                data: {
                                  msg: "không được để trống. Vui lòng thử lại.",
                                  error_class: "u-has-error",
                                  success_class: "u-has-success"
                                }
                              %>
                          </div>
                      </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                          <label class="sr-only" for="phone_number">Số điện thoại</label>
                          <div class="input-group">
                              <div class="input-group-prepend">
                                  <span class="input-group-text" id="signinEmailLabel">
                                      <span class="fas fa-mobile-alt"></span>
                                  </span>
                              </div>
                              <%= f.number_field :phone_number, autofocus: true, class: "form-control",
                                placeholder: "Số điện thoại",
                                id: "phone_number",
                                required: true,
                                data: {
                                  msg: "Hãy nhập đúng định dạng. Vui lòng thử lại.",
                                  error_class: "u-has-error",
                                  success_class: "u-has-success"
                                }
                              %>
                          </div>
                      </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                          <label class="sr-only" for="birth_day">Ngày sinh</label>
                          <div class="input-group">
                              <div class="input-group-prepend">
                                  <span class="input-group-text" id="signinEmailLabel">
                                      <span class="fas fa-birthday-cake"></span>
                                  </span>
                              </div>
                              <%= f.date_field :birth_day, autofocus: true, class: "form-control",
                                placeholder: "Số điện thoại",
                                id: "birth_day",
                                required: true,
                                data: {
                                  msg: "không được để trống. Vui lòng thử lại.",
                                  error_class: "u-has-error",
                                  success_class: "u-has-success"
                                }
                              %>
                          </div>
                      </div>
                  </div>
                  <!-- End Form Group -->

                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                        <label class="sr-only" for="signinPassword">Password</label>
                        <div class="input-group">
                          <div class="input-group-prepend">
                              <span class="input-group-text" id="signinPasswordLabel">
                                  <span class="fas fa-lock"></span>
                              </span>
                          </div>
                          <%= f.password_field :password, class: "form-control",
                            placeholder: "Mật khẩu",
                            id: "signinPassword",
                            required: true,
                            data: {
                              msg: "Mật khẩu không được để trống. Vui lòng thử lại.",
                              error_class: "u-has-error",
                              success_class: "u-has-success"
                            }
                          %>
                        </div>
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                        <label class="sr-only" for="rePassword">Password</label>
                        <div class="input-group">
                          <div class="input-group-prepend">
                              <span class="input-group-text" id="signinPasswordLabel">
                                  <span class="fas fa-lock"></span>
                              </span>
                          </div>
                          <%= f.password_field :password_confirmation, class: "form-control",
                            placeholder: "Nhập lại mật khẩu",
                            id: "rePassword",
                            required: true,
                            data: {
                              msg: "Mật khẩu không được để trống. Vui lòng thử lại.",
                              error_class: "u-has-error",
                              success_class: "u-has-success"
                            }
                          %>
                        </div>
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="js-form-message js-focus-state">
                        <label class="sr-only" for="changePassword">Password</label>
                        <div class="input-group">
                          <div class="input-group-prepend">
                              <span class="input-group-text" id="signinPasswordLabel">
                                  <span class="fas fa-lock"></span>
                              </span>
                          </div>
                          <%= f.password_field :current_password, class: "form-control",
                            placeholder: "Nhập mật khẩu cũ",
                            id: "changePassword",
                            required: true,
                            data: {
                              msg: "Mật khẩu không được để trống. Vui lòng thử lại.",
                              error_class: "u-has-error",
                              success_class: "u-has-success"
                            }
                          %>
                        </div>
                      </div>
                  </div>

                  <div class="mb-2">
                    <button type="submit" class="btn btn-block btn-sm btn-primary transition-3d-hover">Cập nhật</button>
                  </div>
                <% end %>
              </div>
          </div>
      </div>
  </div>
