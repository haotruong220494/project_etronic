<% if @subreviews.present? %>
  <% @subreviews.each do |subreview| %>
    $("#sub_review_<%= @current_review.id %>").append("<%= escape_javascript render('reviews/subreview', {review: subreview, class_parrent_div: 'pl-5 pt-3'}) %>");
  <% end %>

  $("#sub_review_<%= @current_review.id %>").append("<%= escape_javascript render 'reviews/review_form',
                                        { url_action: create_subreview_reviews_path(parent_id: @current_review.id),
                                          class_input: "form-control sub_review_input_#{@current_review.id}",
                                          class_parrent_div: "pl-5 pt-3"
                                        }
                                        %>")
  $(".sub_review_<%= @current_review.id %>").remove();
<% else %>
  $("#sub_review_<%= @current_review.id %>").append("<%= escape_javascript render 'reviews/review_form',
                                        { url_action: create_subreview_reviews_path(parent_id: @current_review.id),
                                          class_input: "form-control sub_review_input_#{@current_review.id}",
                                          class_parrent_div: "pl-5 pt-3"
                                        }
                                        %>")
<% end %>

